#task 1
str_line = "Hillel school"
if len(str_line) >= 2:
    print(str_line[:2]+str_line [-2:])
elif len(str_line) < 2:
    print("Ваша строка слишком короткая %s" % str_line)
    
#task 2
s = 'Hillel school'
len = len(s)
Dict = {s:len}
print(Dict)
my_dict = {}
for letter in s:
    my_dict[letter] = my_dict.get(letter, 0) + 1
print(my_dict)
